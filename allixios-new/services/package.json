{
  "name": "@allixios/services",
  "version": "1.0.0",
  "description": "Allixios Microservices Platform",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run start:content\" \"npm run start:user\" \"npm run start:analytics\" \"npm run start:seo\" \"npm run start:notification\"",
    "start:content": "cd content-service && npm run dev",
    "start:user": "cd user-service && npm run dev",
    "start:analytics": "cd analytics-service && npm run dev",
    "start:seo": "cd seo-service && npm run dev",
    "start:translation": "cd translation-service && npm run dev",
    "start:notification": "cd notification-service && npm run dev",
    "start:monetization": "cd monetization-service && npm run dev",
    "build": "npm run build:shared && npm run build:services",
    "build:shared": "cd shared && npm run build",
    "build:services": "concurrently \"npm run build:content\" \"npm run build:user\" \"npm run build:analytics\" \"npm run build:seo\" \"npm run build:notification\"",
    "build:content": "cd content-service && npm run build",
    "build:user": "cd user-service && npm run build",
    "build:analytics": "cd analytics-service && npm run build",
    "build:seo": "cd seo-service && npm run build",
    "build:translation": "cd translation-service && npm run build",
    "build:notification": "cd notification-service && npm run build",
    "build:monetization": "cd monetization-service && npm run build",
    "test": "concurrently \"npm run test:content\" \"npm run test:user\" \"npm run test:analytics\" \"npm run test:seo\" \"npm run test:notification\"",
    "test:content": "cd content-service && npm test",
    "test:user": "cd user-service && npm test",
    "test:analytics": "cd analytics-service && npm test",
    "test:seo": "cd seo-service && npm test",
    "test:translation": "cd translation-service && npm test",
    "test:notification": "cd notification-service && npm test",
    "test:monetization": "cd monetization-service && npm test",
    "lint": "concurrently \"npm run lint:content\" \"npm run lint:user\" \"npm run lint:analytics\" \"npm run lint:seo\" \"npm run lint:notification\"",
    "lint:content": "cd content-service && npm run lint",
    "lint:user": "cd user-service && npm run lint",
    "lint:analytics": "cd analytics-service && npm run lint",
    "lint:seo": "cd seo-service && npm run lint",
    "lint:translation": "cd translation-service && npm run lint",
    "lint:notification": "cd notification-service && npm run lint",
    "lint:monetization": "cd monetization-service && npm run lint",
    "install:all": "npm run install:shared && npm run install:services",
    "install:shared": "cd shared && npm install",
    "install:services": "concurrently \"npm run install:content\" \"npm run install:user\" \"npm run install:analytics\" \"npm run install:seo\" \"npm run install:notification\"",
    "install:content": "cd content-service && npm install",
    "install:user": "cd user-service && npm install",
    "install:analytics": "cd analytics-service && npm install",
    "install:seo": "cd seo-service && npm install",
    "install:translation": "cd translation-service && npm install",
    "install:notification": "cd notification-service && npm install",
    "install:monetization": "cd monetization-service && npm install",
    "clean": "concurrently \"npm run clean:content\" \"npm run clean:user\" \"npm run clean:analytics\" \"npm run clean:seo\" \"npm run clean:notification\"",
    "clean:content": "cd content-service && rimraf dist node_modules",
    "clean:user": "cd user-service && rimraf dist node_modules",
    "clean:analytics": "cd analytics-service && rimraf dist node_modules",
    "clean:seo": "cd seo-service && rimraf dist node_modules",
    "clean:translation": "cd translation-service && rimraf dist node_modules",
    "clean:notification": "cd notification-service && rimraf dist node_modules",
    "clean:monetization": "cd monetization-service && rimraf dist node_modules",
    "docker:build": "docker-compose -f ../infrastructure/docker/docker-compose.services.yml build",
    "docker:up": "docker-compose -f ../infrastructure/docker/docker-compose.services.yml up -d",
    "docker:down": "docker-compose -f ../infrastructure/docker/docker-compose.services.yml down",
    "docker:logs": "docker-compose -f ../infrastructure/docker/docker-compose.services.yml logs -f",
    "k8s:deploy": "kubectl apply -f ../infrastructure/kubernetes/services/",
    "k8s:delete": "kubectl delete -f ../infrastructure/kubernetes/services/",
    "migrate": "concurrently \"npm run migrate:content\" \"npm run migrate:user\" \"npm run migrate:analytics\" \"npm run migrate:seo\" \"npm run migrate:notification\"",
    "migrate:content": "cd content-service && npm run migrate",
    "migrate:user": "cd user-service && npm run migrate",
    "migrate:analytics": "cd analytics-service && npm run migrate",
    "migrate:seo": "cd seo-service && npm run migrate",
    "migrate:notification": "cd notification-service && npm run migrate",
    "seed": "concurrently \"npm run seed:content\" \"npm run seed:user\" \"npm run seed:analytics\" \"npm run seed:seo\" \"npm run seed:notification\"",
    "seed:content": "cd content-service && npm run seed",
    "seed:user": "cd user-service && npm run seed",
    "seed:analytics": "cd analytics-service && npm run seed",
    "seed:seo": "cd seo-service && npm run seed",
    "seed:notification": "cd notification-service && npm run seed"
  },
  "workspaces": [
    "shared",
    "content-service",
    "user-service",
    "analytics-service",
    "seo-service",
    "translation-service",
    "notification-service",
    "monetization-service"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "cross-env": "^7.0.3",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "microservices",
    "nodejs",
    "typescript",
    "content-management",
    "analytics",
    "seo",
    "notifications",
    "allixios"
  ],
  "author": "Allixios Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/allixios/platform.git",
    "directory": "services"
  },
  "bugs": {
    "url": "https://github.com/allixios/platform/issues"
  },
  "homepage": "https://allixios.com"
}