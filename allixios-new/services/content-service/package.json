{
  "name": "@allixios/content-service",
  "version": "1.0.0",
  "description": "Content Management Service for Allixios Platform",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "migrate": "npm run build && node dist/migrations/migrate.js",
    "seed": "npm run build && node dist/seeds/seed.js",
    "docker:build": "docker build -t allixios/content-service .",
    "docker:run": "docker run -p 3001:3001 allixios/content-service"
  },
  "keywords": [
    "content-management",
    "microservice",
    "nodejs",
    "typescript",
    "postgresql",
    "mongodb",
    "redis",
    "elasticsearch"
  ],
  "author": "Allixios Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "mongodb": "^6.3.0",
    "redis": "^4.6.10",
    "@elastic/elasticsearch": "^8.11.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "mime-types": "^2.1.35",
    "uuid": "^9.0.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "config": "^3.3.9",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "prom-client": "^15.0.0",
    "express-prometheus-middleware": "^1.2.0",
    "node-cron": "^3.0.3",
    "bull": "^4.12.2",
    "ioredis": "^5.3.2",
    "axios": "^1.6.2",
    "form-data": "^4.0.0",
    "slugify": "^1.6.6",
    "marked": "^9.1.6",
    "dompurify": "^3.0.6",
    "jsdom": "^23.0.1",
    "cheerio": "^1.0.0-rc.12",
    "reading-time": "^1.5.0",
    "keyword-extractor": "^0.0.25",
    "compromise": "^14.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/node-cron": "^3.0.11",
    "@types/marked": "^6.0.0",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.6",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}