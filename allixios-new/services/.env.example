# Allixios Services Environment Configuration
# Copy this file to .env and update the values

# ===========================================
# GLOBAL CONFIGURATION
# ===========================================

# Environment
NODE_ENV=development
LOG_LEVEL=info

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=allixios
POSTGRES_USER=allixios_user
POSTGRES_PASSWORD=allixios_password
POSTGRES_SSL=false
POSTGRES_MAX_CONNECTIONS=20

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=allixios
MONGODB_MAX_POOL_SIZE=10

# Redis
REDIS_URL=redis://localhost:6379

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# ClickHouse (for Analytics)
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=allixios
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=

# ===========================================
# SERVICE PORTS
# ===========================================

# Content Service
CONTENT_SERVICE_PORT=3001

# User Service
USER_SERVICE_PORT=3002

# Analytics Service
ANALYTICS_SERVICE_PORT=3003

# SEO Service
SEO_SERVICE_PORT=3004

# Translation Service
TRANSLATION_SERVICE_PORT=3005

# Notification Service
NOTIFICATION_SERVICE_PORT=3006

# Monetization Service
MONETIZATION_SERVICE_PORT=3007

# ===========================================
# SERVICE URLS (for inter-service communication)
# ===========================================

CONTENT_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
ANALYTICS_SERVICE_URL=http://localhost:3003
SEO_SERVICE_URL=http://localhost:3004
TRANSLATION_SERVICE_URL=http://localhost:3005
NOTIFICATION_SERVICE_URL=http://localhost:3006
MONETIZATION_SERVICE_URL=http://localhost:3007

# ===========================================
# AI SERVICES CONFIGURATION
# ===========================================

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Google AI (Gemini)
GOOGLE_AI_API_KEY=your-google-ai-api-key
GEMINI_MODEL=gemini-pro

# Anthropic (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ===========================================
# NOTIFICATION SERVICES
# ===========================================

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# AWS SES (Alternative to SMTP)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
SES_FROM_EMAIL=noreply@yourdomain.com

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Web Push Notifications
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@yourdomain.com

# ===========================================
# PAYMENT PROCESSING (Monetization Service)
# ===========================================

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# ===========================================
# EXTERNAL APIS
# ===========================================

# Google Analytics
GOOGLE_ANALYTICS_TRACKING_ID=UA-XXXXXXXXX-X
GOOGLE_ANALYTICS_VIEW_ID=123456789

# Google Search Console
GOOGLE_SEARCH_CONSOLE_SITE_URL=https://yourdomain.com

# Social Media APIs
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# ===========================================
# FILE STORAGE
# ===========================================

# Local Storage
UPLOAD_DESTINATION=./uploads
UPLOAD_MAX_FILE_SIZE=10485760

# AWS S3
S3_BUCKET_NAME=your-s3-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ===========================================
# MONITORING & OBSERVABILITY
# ===========================================

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn

# New Relic
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=allixios-services

# Datadog
DATADOG_API_KEY=your-datadog-api-key

# ===========================================
# RATE LIMITING
# ===========================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# ===========================================
# CACHING
# ===========================================

CACHE_TTL=3600
CACHE_MAX_KEYS=10000

# ===========================================
# FEATURE FLAGS
# ===========================================

ENABLE_AI=true
ENABLE_SEARCH=true
ENABLE_ANALYTICS=true
ENABLE_WORKFLOW=true
ENABLE_CACHE=true
ENABLE_QUEUE=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================

# Enable development features
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_MORGAN_LOGGING=true

# Hot reload
ENABLE_HOT_RELOAD=true

# Debug mode
DEBUG=allixios:*