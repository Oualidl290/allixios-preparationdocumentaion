# ============================================================================
# ALLIXIOS PLATFORM - ENVIRONMENT CONFIGURATION
# Copy this file to .env and update the values for your environment
# ============================================================================

# ============================================================================
# GENERAL SETTINGS
# ============================================================================
NODE_ENV=development
TIMEZONE=UTC

# ============================================================================
# DATABASE CREDENTIALS
# ============================================================================

# PostgreSQL (Primary Database)
POSTGRES_PASSWORD=allixios_secure_password_change_me
DATABASE_URL=postgresql://allixios_user:allixios_secure_password_change_me@postgres:5432/allixios

# MongoDB (Document Store)
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=mongo_secure_password_change_me
MONGODB_URL=mongodb://admin:mongo_secure_password_change_me@mongodb:27017/allixios?authSource=admin

# Redis (Caching)
REDIS_PASSWORD=redis_secure_password_change_me
REDIS_URL=redis://:redis_secure_password_change_me@redis:6379

# ClickHouse (Analytics)
CLICKHOUSE_USER=allixios_user
CLICKHOUSE_PASSWORD=clickhouse_secure_password_change_me
CLICKHOUSE_URL=http://clickhouse:8123

# Elasticsearch (Search)
ELASTICSEARCH_URL=http://elasticsearch:9200

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# JWT & Security
JWT_SECRET=your_super_secure_jwt_secret_key_change_me_minimum_32_chars
ENCRYPTION_KEY=your_encryption_key_32_chars_long
CORS_ORIGIN=http://localhost:3001,http://localhost:3008,http://localhost:3009

# API URLs
API_URL=http://localhost:3000
SITE_URL=http://localhost:3008

# ============================================================================
# AI SERVICES
# ============================================================================

# OpenAI
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Google AI (Gemini)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================================
# WORKFLOW AUTOMATION (n8n)
# ============================================================================
N8N_USER=admin
N8N_PASSWORD=n8n_secure_password_change_me
N8N_HOST=localhost
N8N_WEBHOOK_URL=http://localhost:5678
N8N_URL=http://localhost:5678

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=grafana_secure_password_change_me
GRAFANA_URL=http://localhost:3007

# Prometheus
PROMETHEUS_URL=http://localhost:9090

# ============================================================================
# EMAIL & NOTIFICATIONS
# ============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_NAME=Allixios Platform
SMTP_FROM_EMAIL=noreply@allixios.com

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ============================================================================
# CLOUD STORAGE (Optional)
# ============================================================================

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=allixios-media-bucket

# Cloudflare (Optional)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# ============================================================================
# CONTENT DELIVERY NETWORK
# ============================================================================
CDN_URL=https://cdn.allixios.com
MEDIA_BASE_URL=https://media.allixios.com

# ============================================================================
# ANALYTICS & TRACKING
# ============================================================================

# Google Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Facebook Pixel
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# ============================================================================
# MONETIZATION
# ============================================================================

# Google AdSense
ADSENSE_PUBLISHER_ID=pub-your_adsense_publisher_id

# Amazon Associates
AMAZON_AFFILIATE_ID=your_amazon_affiliate_id
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Debug & Logging
DEBUG=allixios:*
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Development Tools
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_DEBUG_ROUTES=true

# Hot Reload
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# ============================================================================
# PRODUCTION OVERRIDES
# ============================================================================

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/allixios.crt
SSL_KEY_PATH=/etc/ssl/private/allixios.key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Settings
SESSION_SECRET=your_session_secret_key_change_me
SESSION_TIMEOUT=86400000

# ============================================================================
# BACKUP & MAINTENANCE
# ============================================================================

# Backup Settings
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=allixios-backups

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System maintenance in progress

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Core Features
ENABLE_USER_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_NEWSLETTER=true
ENABLE_COMMENTS=true

# AI Features
ENABLE_AI_CONTENT_GENERATION=true
ENABLE_AI_SEO_OPTIMIZATION=true
ENABLE_AI_TRANSLATION=true
ENABLE_AI_IMAGE_ANALYSIS=true

# Advanced Features
ENABLE_A_B_TESTING=true
ENABLE_ANALYTICS_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_WORKFLOW_AUTOMATION=true

# Experimental Features
ENABLE_VECTOR_SEARCH=false
ENABLE_REAL_TIME_COLLABORATION=false
ENABLE_VOICE_CONTENT=false